<UserControl
	x:Class="GroepswerkTaak1.uc_01_MijnPortal"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:GroepswerkTaak1"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="450"
	d:DesignWidth="800"
	Background="{StaticResource MainBackgroundColor}"
	mc:Ignorable="d">
	<UserControl.Resources>
		<local:clsByteArrayToImageConverter x:Key="ByteArrayToImageConverter" />
	</UserControl.Resources>
	<ScrollViewer VerticalScrollBarVisibility="auto">
		<ScrollViewer.Resources>
			<Style BasedOn="{StaticResource CustomVerticalScrollBar}" TargetType="ScrollBar" />
		</ScrollViewer.Resources>

		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="auto" />
			</Grid.RowDefinitions>
			<Grid Grid.Row="0" Grid.Column="1">
				<Image
					x:Name="PhotoFlipperImage"
					MaxHeight="350"
					Margin="30"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					RenderTransformOrigin="0.5,0.5"
					Source="{Binding PhotoFlipper.ActiveImageBytes, Converter={StaticResource ByteArrayToImageConverter}, NotifyOnSourceUpdated=True}">
					<Image.RenderTransform>
						<ScaleTransform x:Name="ImageHorizontalScaleTransform" ScaleX="1" />
					</Image.RenderTransform>
				</Image>
			</Grid>
			<Grid
				Grid.Row="1"
				Grid.Column="1"
				Margin="5"
				VerticalAlignment="Bottom">
				<Grid.RowDefinitions>
					<RowDefinition Height="auto" />
					<RowDefinition Height="auto" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="auto" />
					<ColumnDefinition Width="auto" />
					<ColumnDefinition Width="auto" />
				</Grid.ColumnDefinitions>
				<Button
					Grid.Row="0"
					Grid.Column="0"
					local:clsPortalButtonExtender.MainIcon="{StaticResource Smoelenboek}"
					Click="btnOpenTab_Click"
					Content="Smoelenboek"
					Style="{StaticResource MijnPortalButtonStyle}"
					Tag="Smoelenboek" />
				<Button
					Grid.Row="0"
					Grid.Column="1"
					local:clsPortalButtonExtender.MainIcon="{StaticResource Engineer}"
					local:clsPortalButtonExtender.SmallIcon="{StaticResource Vision2}"
					Click="btnOpenTab_Click"
					Content="Helpdesk TD"
					Style="{StaticResource MijnPortalButtonStyle}"
					Tag="Helpdesk TD" />
				<Button
					Grid.Row="0"
					Grid.Column="2"
					local:clsPortalButtonExtender.MainIcon="{StaticResource Hotline}"
					local:clsPortalButtonExtender.SmallIcon="{StaticResource Vision2}"
					Click="btnOpenTab_Click"
					Content="Helpdesk ICT"
					Style="{StaticResource MijnPortalButtonStyle}"
					Tag="Helpdesk ICT" />
				<Button
					Grid.Row="1"
					Grid.Column="0"
					local:clsPortalButtonExtender.MainIcon="{StaticResource Documents}"
					local:clsPortalButtonExtender.SmallIcon="{StaticResource Search}"
					Click="btnOpenTab_Click"
					Content="Bladeren DMS"
					Style="{StaticResource MijnPortalButtonStyle}"
					Tag="Bladeren DMS" />
				<Button
					Grid.Row="1"
					Grid.Column="2"
					local:clsPortalButtonExtender.MainIcon="{StaticResource ForkAndKnife}"
					local:clsPortalButtonExtender.SmallIcon="{StaticResource Vision2}"
					Click="btnOpenTab_Click"
					Content="Helpdesk keuken"
					Style="{StaticResource MijnPortalButtonStyle}"
					Tag="Helpdesk keuken" />
				<Button
					Grid.Row="1"
					Grid.Column="1"
					local:clsPortalButtonExtender.MainIcon="{StaticResource AdminButtonImage}"
					Click="btnOpenTab_Click"
					Style="{StaticResource MijnPortalButtonStyle}"
					Tag="Admin paneel" />
			</Grid>
		</Grid>
	</ScrollViewer>

</UserControl>
