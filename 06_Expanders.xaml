<UserControl
    x:Class="GroepswerkTaak1._06_Expanders"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GroepswerkTaak1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <!--  kleuren en vormen zullen volgens via styles uit een resource-dictionary  -->
    <StackPanel>
        <Border
            Margin="5"
            BorderBrush="Tan"
            BorderThickness="2">
            <Expander
                Margin="5"
                Padding="5"
                Header="Region Een">
                <Button Padding="3" Content="Verborgen knop een" />
            </Expander>
        </Border>
        <Border
            Margin="5"
            BorderBrush="Tan"
            BorderThickness="2">
            <Expander
                Margin="5"
                Padding="5"
                Header="Region Twee">
                <TextBlock Text="dit is een text in een textbllock" TextWrapping="Wrap" />
            </Expander>
        </Border>
        <Border
            Margin="5"
            BorderBrush="Tan"
            BorderThickness="2">
            <Expander
                Margin="5"
                Padding="5"
                ExpandDirection="Right"
                Header="Region Drie">
                <Button Padding="3" Content="Verborgen knop een" />
            </Expander>
        </Border>
    </StackPanel>
</UserControl>
