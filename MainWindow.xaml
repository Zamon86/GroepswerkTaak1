<Window
    x:Class="GroepswerkTaak1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GroepswerkTaak1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Groepswerk Taak 1"
    Width="1200"
    Height="800"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Window.Resources>
        <Style BasedOn="{StaticResource CustomMenuItemStyle}" TargetType="MenuItem" />
    </Window.Resources>

    <DockPanel Background="{StaticResource MainBackgroundColor}" LastChildFill="True">

        <Menu
            Name="mnuMainMenu"
            Background="{StaticResource MainBackgroundColor}"
            DockPanel.Dock="Top" />

        <Border
            Height="25"
            Background="White"
            DockPanel.Dock="Top">
            <TabControl
                x:Name="tcMain"
                Height="25"
                BorderThickness="0" />
        </Border>

        <!--  Test buttons for tabs  -->
        <StackPanel Width="150" Margin="5">
            <Button
                Margin="5"
                Click="btnOpenTab_Click"
                Content="Open Tab 1"
                Tag="Tab Tab1" />
            <Button
                Margin="5"
                Click="btnOpenTab_Click"
                Content="Open Tab 2"
                Tag="Tab Tab2" />
            <Button
                Margin="5"
                Click="btnOpenTab_Click"
                Content="Open Tab 3"
                Tag="Tab Tab3" />
            <Button
                Margin="5"
                Click="btnOpenTab_Click"
                Content="Open Tab 4"
                Tag="Tab Tab4" />
            <Button
                Margin="5"
                Click="btnOpenTab_Click"
                Content="Open Tab 5"
                Tag="Tab Tab5" />
            <Button
                Margin="5"
                Click="btnOpenTab_Click"
                Content="Open Tab 6"
                Tag="Tab Tab6" />
        </StackPanel>
    </DockPanel>
</Window>
