<Window
	x:Class="GroepswerkTaak1.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:GroepswerkTaak1"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="Groepswerk Taak 1"
	Width="1200"
	Height="700"
	MinWidth="550"
	Loaded="Window_Loaded"
	mc:Ignorable="d">
	<Window.Resources>
		<Style BasedOn="{StaticResource CustomMenuItemStyle}" TargetType="MenuItem" />
	</Window.Resources>

	<DockPanel LastChildFill="True">
		<Menu
			Name="mnuMainMenu"
			Background="{StaticResource MainBackgroundColor}"
			DockPanel.Dock="Top" />
		<Grid
			Margin="3,0"
			Background="White"
			DockPanel.Dock="Top">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="auto" />
			</Grid.ColumnDefinitions>
			<TabControl
				x:Name="tcMain"
				MinWidth="400"
				Padding="0"
				BorderThickness="0"
				SelectionChanged="tcMain_SelectionChanged"
				TabStripPlacement="Top" />
			<Button
				Name="btnAfmelden"
				Grid.Column="1"
				Height="23"
				VerticalAlignment="Center"
				Click="btnAfmelden_Click"
				Content="Afmelden"
				Style="{StaticResource AfmeldenButtonStyle}" />
		</Grid>

		<Grid
			Name="grdFooter"
			Height="20"
			Margin="3"
			Background="{StaticResource MainBackgroundColor}"
			DockPanel.Dock="Bottom">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="auto" />
			</Grid.ColumnDefinitions>
			<TextBlock
				x:Name="txtDateAndTime"
				Margin="10,0,0,0"
				Padding="2"
				HorizontalAlignment="Left"
				VerticalAlignment="Center"
				FontSize="12"
				FontWeight="Bold" />

			<Label
				Name="lblUser"
				Grid.Column="1"
				Margin="0,0,10,0"
				Padding="2"
				HorizontalAlignment="Right"
				VerticalAlignment="Center"
				Content="GebruikersNaam"
				FontSize="12"
				FontWeight="Bold" />
		</Grid>


		<!--  Test buttons  -->
		<StackPanel
			Margin="3,0,3,3"
			Background="{StaticResource MainBackgroundColor}"
			DockPanel.Dock="Left">
			<Label HorizontalAlignment="Center" Content="Test Buttons" />

			<Button
				Name="btnDannyTest"
				Click="btnDannyTest_Click"
				Content="Danny Test" />

		</StackPanel>

		<Grid Name="grdMain" />

	</DockPanel>
</Window>
