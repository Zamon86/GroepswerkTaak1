<Window
    x:Class="GroepswerkTaak1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GroepswerkTaak1"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Groepswerk Taak 1"
    Width="1200"
    Height="700"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Window.Resources>
        <Style BasedOn="{StaticResource CustomMenuItemStyle}" TargetType="MenuItem" />
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <Menu
            Name="mnuMainMenu"
            Background="{StaticResource MainBackgroundColor}"
            DockPanel.Dock="Top" />
        <Grid
            Height="25"
            Margin="3,0"
            Background="White"
            DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TabControl
                x:Name="tcMain"
                Height="25"
                BorderThickness="0" />
            <Button
                Name="btnAfmelden"
                Grid.Column="1"
                Click="btnAfmelden_Click"
                Content="Afmelden"
                Style="{StaticResource AfmeldenButtonStyle}" />
        </Grid>

        <Grid
            Name="grdFooter"
            Height="20"
            Margin="3"
            Background="{StaticResource MainBackgroundColor}"
            DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <TextBlock
                x:Name="txtDateAndTime"
                Margin="10,0,0,0"
                Padding="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="12"
                FontWeight="Bold" />

            <Label
                Name="lblUser"
                Grid.Column="1"
                Margin="0,0,10,0"
                Padding="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Content="GebruikersNaam"
                FontSize="12"
                FontWeight="Bold" />
        </Grid>


        <!--  Test buttons for tabs  -->
        <StackPanel Margin="3,0,3,3" Background="{StaticResource MainBackgroundColor}">
            <Button
                Width="100"
                Margin="5"
                Click="btnOpenTab_Click"
                Content="Open Tab 1"
                Tag="Tab Tab1" />
            <Button
                Width="100"
                Margin="5"
                Click="btnOpenTab_Click"
                Content="Open Tab 2"
                Tag="Tab Tab2" />
            <Button
                Width="100"
                Margin="5"
                Click="btnOpenTab_Click"
                Content="Open Tab 3"
                Tag="Tab Tab3" />
            <Button
                Width="100"
                Margin="5"
                Click="btnOpenTab_Click"
                Content="Open Tab 4"
                Tag="Tab Tab4" />
            <Button
                Width="100"
                Margin="5"
                Click="btnOpenTab_Click"
                Content="Open Tab 5"
                Tag="Tab Tab5" />
            <Button
                Width="100"
                Margin="5"
                Click="btnOpenTab_Click"
                Content="Open Tab 6"
                Tag="Tab Tab6" />
        </StackPanel>
    </DockPanel>
</Window>
