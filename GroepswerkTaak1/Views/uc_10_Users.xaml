<UserControl
    x:Class="GroepswerkTaak1.uc_Users"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Helpers="clr-namespace:GroepswerkTaak1.Helpers"
    xmlns:VM="clr-namespace:GroepswerkTaak1.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GroepswerkTaak1.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <UserControl.Resources>
        <VM:clsUsersVM x:Key="VMUsers" />
    </UserControl.Resources>
    <Border
        BorderBrush="Black"
        BorderThickness="5"
        CornerRadius="30">
        <StackPanel
            Background="{StaticResource MainBackgroundColor}"
            DataContext="{StaticResource VMUsers}"
            Orientation="Vertical">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Margin="0,0,0,5"
                    Padding="5"
                    Background="Beige"
                    FontFamily="Segoe ui light"
                    FontSize="36"
                    Foreground="SteelBlue"
                    Text="Beheer gebruikers"
                    TextAlignment="Center" />
                <Label
                    Name="lblKeuze"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5"
                    Content="Keuze"
                    FontFamily="Segoe ui light"
                    Foreground="SteelBlue" />
                <ComboBox
                    Name="cboKeuze"
                    Grid.Row="1"
                    Grid.Column="2"
                    Width="245"
                    Margin="5"
                    DisplayMemberPath="KnopNaam"
                    FontFamily="segoe ui light"
                    FontSize="16"
                    Foreground="SteelBlue"
                    ItemsSource="{Binding Path=MijnCollectie}"
                    SelectedItem="{Binding Path=MijnSelectedItem, Mode=TwoWay}" />
            </Grid>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label
                    Name="lblLogin"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5"
                    Content="Login :"
                    FontFamily="segoe ui light"
                    Foreground="SteelBlue" />
                <TextBox
                    Name="txtLoginNaam"
                    Grid.Row="1"
                    Grid.Column="2"
                    Margin="5"
                    FontFamily="segoe ui light"
                    FontSize="16"
                    Foreground="SteelBlue" />
                <Label
                    Name="lblNaam"
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="5"
                    Content="Naam :"
                    FontFamily="segoe ui light"
                    Foreground="SteelBlue" />
                <TextBox
                    Name="txtNaam"
                    Grid.Row="2"
                    Grid.Column="2"
                    Margin="5"
                    FontFamily="segoe ui light"
                    FontSize="16"
                    Foreground="SteelBlue" />
                <Label
                    Name="lblVoornaam"
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="5"
                    Content="voornaam :"
                    FontFamily="segoe ui light"
                    Foreground="SteelBlue" />
                <TextBox
                    Name="txtVoornaam"
                    Grid.Row="3"
                    Grid.Column="2"
                    Margin="5"
                    FontFamily="segoe ui light"
                    FontSize="16"
                    Foreground="SteelBlue" />
                <Label
                    Name="lblEmail"
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="5"
                    Content="Email :"
                    FontFamily="segoe ui light"
                    Foreground="SteelBlue" />

                <TextBox
                    Name="txtEmail"
                    Grid.Row="4"
                    Grid.Column="2"
                    Margin="5"
                    FontFamily="segoe ui light"
                    FontSize="16"
                    Foreground="SteelBlue" />
                <Label
                    Name="lblTelefoon"
                    Grid.Row="5"
                    Grid.Column="1"
                    Margin="5"
                    Content="telefoon :"
                    FontFamily="segoe ui light"
                    Foreground="SteelBlue" />
                <TextBox
                    Name="txtTelefoon"
                    Grid.Row="5"
                    Grid.Column="2"
                    Margin="5"
                    FontFamily="segoe ui light"
                    FontSize="16"
                    Foreground="SteelBlue" />
                <Label
                    Name="lblMachtigig"
                    Grid.Row="6"
                    Grid.Column="1"
                    Margin="5"
                    Content="Machteging :"
                    FontFamily="segoe ui light"
                    Foreground="SteelBlue" />
                <ComboBox
                    Name="cboMachteging"
                    Grid.Row="6"
                    Grid.Column="2"
                    Margin="5"
                    FontFamily="segoe ui light"
                    FontSize="16"
                    Foreground="SteelBlue"
                    SelectionChanged="cboMachteging_SelectionChanged" />
                <Label
                    Name="lblActief"
                    Grid.Row="7"
                    Grid.Column="1"
                    Margin="5"
                    Content="Aktief :"
                    FontFamily="segoe ui light"
                    Foreground="SteelBlue" />
                <CheckBox
                    Name="chkActief"
                    Grid.Row="7"
                    Grid.Column="2"
                    Margin="5"
                    FontFamily="segoe ui light"
                    FontSize="16"
                    Foreground="SteelBlue" />
                <StackPanel
                    Grid.Row="8"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Name="btnNieuw"
                        Margin="5"
                        Padding="5"
                        Background="Beige"
                        Click="btnNieuw_Click"
                        Content="Nieuw"
                        FontFamily="segoe ui light"
                        Foreground="SteelBlue" />
                    <Button
                        Name="btnOpslaan"
                        Margin="5"
                        Padding="5"
                        Background="Beige"
                        Click="btnOpslaan_Click"
                        Content="Opslaan"
                        FontFamily="segoe ui light"
                        Foreground="SteelBlue" />
                    <Button
                        Name="btnVerwijderen"
                        Margin="5"
                        Padding="5"
                        Background="Beige"
                        Click="btnVerwijderen_Click"
                        Content="Verwijderen"
                        FontFamily="segoe ui light"
                        Foreground="SteelBlue" />
                    <Button
                        Name="btnAnnuleren"
                        Margin="5"
                        Padding="5"
                        Background="Beige"
                        Click="btnAnnuleren_Click"
                        Content="Annuleren"
                        FontFamily="segoe ui light"
                        Foreground="SteelBlue" />
                    <Button
                        Name="btnSluiten"
                        Margin="5"
                        Padding="5"
                        Background="Beige"
                        Click="btnSluiten_Click"
                        Content="Sluiten"
                        FontFamily="segoe ui light"
                        Foreground="SteelBlue" />
                </StackPanel>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
