<UserControl
	x:Class="GroepswerkTaak1.uc_Users"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:GroepswerkTaak1.Views"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="450"
	d:DesignWidth="500"
	mc:Ignorable="d">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="2*" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<TextBlock
			Grid.Row="0"
			Grid.Column="0"
			Grid.ColumnSpan="4"
			Margin="0,0,0,20"
			Padding="20"
			Background="Beige"
			FontFamily="segoe ui light"
			FontSize="48"
			Foreground="SteelBlue"
			Text="beheer gebruikers"
			TextAlignment="Center" />
		<Label
			Name="lblLogin"
			Grid.Row="1"
			Grid.Column="1"
			Margin="5"
			Content="Login :"
			FontFamily="segoe ui light"
			Foreground="SteelBlue" />
		<ComboBox
			Name="cboKeuze"
			Grid.Row="1"
			Grid.Column="2"
			Width="200"
			Margin="5"
			FontFamily="segoe ui light"
			FontSize="16"
			Foreground="SteelBlue"
			SelectionChanged="cboKeuze_SelectionChanged" />
		<Label
			Name="lblNaam"
			Grid.Row="2"
			Grid.Column="1"
			Margin="5"
			Content="Naam :"
			FontFamily="segoe ui light"
			Foreground="SteelBlue" />
		<TextBox
			Name="txtNaam"
			Grid.Row="2"
			Grid.Column="2"
			Margin="5"
			FontFamily="segoe ui light"
			FontSize="16"
			Foreground="SteelBlue" />
		<Label
			Name="lblVoornaam"
			Grid.Row="3"
			Grid.Column="1"
			Margin="5"
			Content="voornaam :"
			FontFamily="segoe ui light"
			Foreground="SteelBlue" />
		<TextBox
			Name="txtVoornaam"
			Grid.Row="3"
			Grid.Column="2"
			Margin="5"
			FontFamily="segoe ui light"
			FontSize="16"
			Foreground="SteelBlue" />
		<Label
			Name="lblEmail"
			Grid.Row="4"
			Grid.Column="1"
			Margin="5"
			Content="Email :"
			FontFamily="segoe ui light"
			Foreground="SteelBlue" />

		<TextBox
			Name="txtEmail"
			Grid.Row="4"
			Grid.Column="2"
			Margin="5"
			FontFamily="segoe ui light"
			FontSize="16"
			Foreground="SteelBlue" />
		<Label
			Name="lblTelefoon"
			Grid.Row="5"
			Grid.Column="1"
			Margin="5"
			Content="telefoon :"
			FontFamily="segoe ui light"
			Foreground="SteelBlue" />
		<TextBox
			Name="txtTelefoon"
			Grid.Row="5"
			Grid.Column="2"
			Margin="5"
			FontFamily="segoe ui light"
			FontSize="16"
			Foreground="SteelBlue" />
		<Label
			Name="lblMachtigig"
			Grid.Row="6"
			Grid.Column="1"
			Margin="5"
			Content="Machteging :"
			FontFamily="segoe ui light"
			Foreground="SteelBlue" />
		<ComboBox
			Name="cboMachteging"
			Grid.Row="6"
			Grid.Column="2"
			Margin="5"
			FontFamily="segoe ui light"
			FontSize="16"
			Foreground="SteelBlue"
			SelectionChanged="cboMachteging_SelectionChanged" />
		<Label
			Name="lblActirf"
			Grid.Row="7"
			Grid.Column="1"
			Margin="5"
			Content="Aktief :"
			FontFamily="segoe ui light"
			Foreground="SteelBlue" />
		<CheckBox
			Name="chkActief"
			Grid.Row="7"
			Grid.Column="2"
			Margin="5"
			FontFamily="segoe ui light"
			FontSize="16"
			Foreground="SteelBlue" />
		<StackPanel
			Grid.Row="8"
			Grid.Column="1"
			Grid.ColumnSpan="2"
			HorizontalAlignment="Center"
			Orientation="Horizontal">
			<Button
				Name="btnNieuw"
				Margin="5"
				Padding="5"
				Background="Beige"
				Click="btnNieuw_Click"
				Content="Nieuw"
				FontFamily="segoe ui light"
				Foreground="SteelBlue" />
			<Button
				Name="btnOpslaan"
				Margin="5"
				Padding="5"
				Background="Beige"
				Click="btnOpslaan_Click"
				Content="Opslaan"
				FontFamily="segoe ui light"
				Foreground="SteelBlue" />
			<Button
				Name="btnVerwijderen"
				Margin="5"
				Padding="5"
				Background="Beige"
				Click="btnVerwijderen_Click"
				Content="Verwijderen"
				FontFamily="segoe ui light"
				Foreground="SteelBlue" />
			<Button
				Name="btnAnnuleren"
				Margin="5"
				Padding="5"
				Background="Beige"
				Click="btnAnnuleren_Click"
				Content="Annuleren"
				FontFamily="segoe ui light"
				Foreground="SteelBlue" />
			<Button
				Name="btnSluiten"
				Margin="5"
				Padding="5"
				Background="Beige"
				Click="btnSluiten_Click"
				Content="Sluiten"
				FontFamily="segoe ui light"
				Foreground="SteelBlue" />
		</StackPanel>
	</Grid>
</UserControl>
