<Window
    x:Class="GroepswerkTaak1.Views.winLoggingFilter"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:VM="clr-namespace:GroepswerkTaak1.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GroepswerkTaak1.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Logging Filter"
    Width="810"
    Height="600"
    MouseDown="Window_MouseDown"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.DataContext>
        <VM:clsLoggingVM />
    </Window.DataContext>
    <Grid Background="{StaticResource MainBackgroundColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="107" />
            <ColumnDefinition Width="115" />
            <ColumnDefinition Width="155" />
            <ColumnDefinition Width="155" />
            <ColumnDefinition Width="115" />
            <ColumnDefinition Width="155" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="1"
            Grid.ColumnSpan="6"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                x:Name="btnCleanFilters"
                Width="100"
                Height="25"
                Margin="0,5,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Click="btnCleanFilters_Click"
                Content="Wis Filters" />
            <Label
                Margin="220,0,220,0"
                HorizontalAlignment="Stretch"
                Content="Logging Filter"
                FontSize="20"
                FontWeight="Bold" />
            <Button
                x:Name="btnClose"
                Width="100"
                Height="25"
                Margin="0,5,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Click="btnClose_Click"
                Content="Sluiten" />
        </StackPanel>

        <TextBlock
            Grid.Row="2"
            Grid.Column="0"
            Margin="5,0,5,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="Filter op Aktie:" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="1"
            Margin="5,0,5,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="Filter op Oorsprong:" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="2"
            Margin="5,0,5,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="Filter op Prevalue:" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="3"
            Margin="5,0,5,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="Filter op Postvalue:" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="4"
            Margin="5,0,5,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="Filter op Uitvoerder:" />
        <TextBlock
            Grid.Row="2"
            Grid.Column="5"
            Margin="5,0,5,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="Filter op Datum:" />
        <TextBox
            x:Name="txtFilterAktie"
            Grid.Row="3"
            Grid.Column="0"
            Width="90"
            Margin="5,0,5,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="{Binding FilterAktie, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
            x:Name="txtFilterOorsprong"
            Grid.Row="3"
            Grid.Column="1"
            Width="105"
            Margin="5,0,5,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="{Binding FilterTabelColumn, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
            x:Name="txtFilterPrevalue"
            Grid.Row="3"
            Grid.Column="2"
            Width="145"
            Margin="5,0,5,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="{Binding FilterPreValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
            x:Name="txtFilterPostvalue"
            Grid.Row="3"
            Grid.Column="3"
            Width="145"
            Margin="5,0,5,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="{Binding FilterPostValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
            x:Name="txtFilterUitvoerder"
            Grid.Row="3"
            Grid.Column="4"
            Width="105"
            Margin="5,0,5,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="{Binding FilterGebruiker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
            x:Name="txtFilterDatum"
            Grid.Row="3"
            Grid.Column="5"
            Width="180"
            Margin="5,0,5,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="" />
        <DataGrid
            Name="gridLogging"
            Grid.Row="4"
            Grid.RowSpan="2"
            Grid.ColumnSpan="6"
            Height="500"
            Margin="0,5,0,5"
            AutoGenerateColumns="False"
            ItemsSource="{Binding LoggingsCV}"
            VerticalScrollBarVisibility="Hidden">

            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding Aktie}"
                    Header="Aktie" />
                <DataGridTextColumn
                    Width="115"
                    Binding="{Binding TabelColumn}"
                    Header="Oorsprong" />
                <DataGridTextColumn
                    Width="155"
                    Binding="{Binding PreValue}"
                    Header="PreValue" />
                <DataGridTextColumn
                    Width="155"
                    Binding="{Binding PostValue}"
                    Header="PostValue" />
                <DataGridTextColumn
                    Width="115"
                    Binding="{Binding Gebruiker}"
                    Header="Uitvoerder" />
                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding Registratie}"
                    Header="Datum Tijd" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
