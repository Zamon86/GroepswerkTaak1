<UserControl
    x:Class="GroepswerkTaak1.uc_Knoppen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Helpers="clr-namespace:GroepswerkTaak1.Helpers"
    xmlns:VM="clr-namespace:GroepswerkTaak1.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GroepswerkTaak1.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="400     "
    mc:Ignorable="d">
    <UserControl.Resources>
        <VM:clsKnoppenVM x:Key="VMKnoppen" />
    </UserControl.Resources>
    <Border
        BorderBrush="Black"
        BorderThickness="5"
        CornerRadius="30">
        <StackPanel
            Background="{StaticResource MainBackgroundColor}"
            DataContext="{StaticResource VMKnoppen}"
            Orientation="Vertical">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Margin="0,0,0,5"
                    Padding="5"
                    Background="Beige"
                    FontFamily="Segoe ui light"
                    FontSize="36"
                    Foreground="SteelBlue"
                    Text="Beheer knoppen"
                    TextAlignment="Center" />
                <Label
                    Name="lblKeuze"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5"
                    Content="Keuze"
                    FontFamily="Segoe ui light"
                    Foreground="SteelBlue" />
                <ComboBox
                    Name="cboKeuze"
                    Grid.Row="1"
                    Grid.Column="2"
                    Width="245"
                    Margin="5"
                    DisplayMemberPath="KnopNaam"
                    FontFamily="segoe ui light"
                    FontSize="16"
                    Foreground="SteelBlue"
                    ItemsSource="{Binding Path=MijnCollectie}"
                    SelectedItem="{Binding Path=MijnSelectedItem, Mode=TwoWay}" />
            </Grid>
            <Grid Name="MyGrid" DataContext="{Binding Path=MijnSelectedItem}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Label
                    Name="lblKnopNaam"
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="5"
                    Content="Naam: "
                    FontFamily="Segoe ui light"
                    Foreground="SteelBlue" />
                <Label
                    Name="lblBeschrijving"
                    Grid.Row="3"
                    Grid.Column="1"
                    Margin="5"
                    Content="Beschrijving"
                    FontFamily="Segoe ui light"
                    Foreground="SteelBlue" />
                <Label
                    Name="lblPositie"
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="5"
                    Content="Positie"
                    FontFamily="segoe ui light"
                    Foreground="SteelBlue" />

                <TextBox
                    Name="txtKnopNaam"
                    Grid.Row="2"
                    Grid.Column="2"
                    Margin="5"
                    FontFamily="segoe ui light"
                    FontSize="16"
                    Foreground="SteelBlue"
                    Text="{Binding Path=KnopTekst, Mode=TwoWay}" />
                <TextBox
                    Name="txtBeschrijving"
                    Grid.Row="3"
                    Grid.Column="2"
                    Width="250"
                    Margin="5"
                    FontFamily="segoe ui light"
                    FontSize="16"
                    Foreground="SteelBlue"
                    Text="{Binding Path=KnopTekst, Mode=TwoWay}"
                    TextWrapping="Wrap" />
                <TextBox
                    Name="txtPositie"
                    Grid.Row="4"
                    Grid.Column="2"
                    Margin="5"
                    FontFamily="segoe ui light"
                    FontSize="16"
                    Foreground="SteelBlue"
                    Text="{Binding Path=KnopPositie, Mode=TwoWay}" />
                <StackPanel
                    Grid.Row="6"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal"
                            DataContext="{StaticResource VMKnoppen}">
                    <Button
                        Name="btnNieuw"
                        Margin="5"
                        Padding="5"
                        Background="Beige"
                        Click="btnNieuw_Click"
                        Command="{Binding cmdNew}"
                        Content="Nieuw"
                        FontFamily="segoe ui light"
                        Foreground="SteelBlue" />
                    <Button
                        Name="btnOpslaan"
                        Margin="5"
                        Padding="5"
                        Background="Beige"
                        Click="btnOpslaan_Click"
                        Content="Opslaan"
                        FontFamily="segoe ui light"
                        Foreground="SteelBlue" />
                    <Button
                        Name="btnVerwijderen"
                        Margin="5"
                        Padding="5"
                        Background="Beige"
                        Click="btnVerwijderen_Click"
                        Content="Verwijderen"
                        FontFamily="segoe ui light"
                        Foreground="SteelBlue" />
                    <Button
                        Name="btnAnnuleren"
                        Margin="5"
                        Padding="5"
                        Background="Beige"
                        
                        Content="Annuleren"
                            Command="{Binding cmdCancel}"
                        FontFamily="segoe ui light"
                        Foreground="SteelBlue" />
                    <!--Click="btnAnnuleren_Click"-->
                    <Button
                        Name="btnSluiten"
                        Margin="5"
                        Padding="5"
                        Background="Beige"
                        Click="btnSluiten_Click"
                        Content="Sluiten"
                        FontFamily="segoe ui light"
                        Foreground="SteelBlue" />
                </StackPanel>
                <Image
                    Grid.Row="1"
                    Grid.Column="2"
                    Width="150"
                    Height="150"
                    Margin="20,0,0,10"
                       Source="{Binding KnopImage}"/>
                <!--  Source="{Binding Path=KnopTekst, Mode=TwoWay}"  -->
                <Button
                    Name="btnLaadIcon"
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="70"
                    Height="40"
                    Margin="5"
                    Click="btnLaadIcon_Click"
                    >
                    <TextBlock Text="Figuur laden" TextWrapping="Wrap" TextAlignment="Center"/>
                </Button>
            </Grid>
        </StackPanel>

    </Border>
</UserControl>
