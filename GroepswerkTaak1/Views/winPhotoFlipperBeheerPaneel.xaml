<Window
    x:Class="GroepswerkTaak1.Views.winPhotoFlipperBeheerPaneel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GroepswerkTaak1.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Photo Flipper Beheerpaneel"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <Grid Background="{StaticResource MainBackgroundColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="1"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Center"
            Content="Photo Flipper Beheerpaneel"
            FontSize="20"
            FontWeight="Bold" />
        <Image
            Grid.Row="2"
            Grid.Column="1"
            MaxWidth="250"
            MaxHeight="350"
            Margin="10" />
        <Button
            x:Name="btnLeft"
            Grid.Row="2"
            Grid.Column="0"
            Width="50"
            Height="50"
            HorizontalAlignment="Left"
            Content="{StaticResource ArrowLeftPhotoGallery}"
            Style="{StaticResource TransparentButton}" />

        <Button
            x:Name="btnRight"
            Grid.Row="2"
            Grid.Column="2"
            Width="50"
            Height="50"
            HorizontalAlignment="Right"
            Content="{StaticResource ArrowRightPhotoGallery}"
            Style="{StaticResource TransparentButton}" />
        <ScrollViewer
            x:Name="scrollViewer"
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Focusable="False"
            HorizontalScrollBarVisibility="Hidden"
            VerticalScrollBarVisibility="Disabled" />

    </Grid>
</Window>
