<UserControl
	x:Class="GroepswerkTaak1.Views.uc_01_MijnPortal"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:converters="clr-namespace:GroepswerkTaak1.Converters"
	xmlns:customControls="clr-namespace:GroepswerkTaak1.CustomControls;assembly=GroepswerkTaak1.CustomControls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:helpers="clr-namespace:GroepswerkTaak1.Helpers"
	xmlns:local="clr-namespace:GroepswerkTaak1"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="450"
	d:DesignWidth="800"
	Background="{StaticResource MainBackgroundColor}"
	mc:Ignorable="d">
	<UserControl.Resources>
		<converters:clsRoleToVisibilityConverter x:Key="RoleToVisibilityConverter" />
	</UserControl.Resources>
	<ScrollViewer VerticalScrollBarVisibility="auto">
		<ScrollViewer.Resources>
			<Style BasedOn="{StaticResource CustomVerticalScrollBar}" TargetType="ScrollBar" />

		</ScrollViewer.Resources>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="*" />
				<RowDefinition Height="auto" />
			</Grid.RowDefinitions>
			<Grid Grid.Row="0" Grid.Column="1">
				<Image
					x:Name="PhotoFlipperImage"
					MaxWidth="250"
					MaxHeight="350"
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					Cursor="Hand"
					MouseLeftButtonDown="PhotoFlipperImage_MouseLeftButtonDown"
					RenderTransformOrigin="0.5,0.5"
					Source="{Binding PhotoFlipper.ActiveImage.ImageBytes, NotifyOnSourceUpdated=True}"
					Visibility="Collapsed">

					<Image.RenderTransform>
						<ScaleTransform x:Name="ImageHorizontalScaleTransform" ScaleX="1" />
					</Image.RenderTransform>
					<Image.Effect>
						<DropShadowEffect
							BlurRadius="10"
							Direction="-45"
							Opacity="0.5"
							ShadowDepth="5"
							Color="Black" />
					</Image.Effect>
				</Image>
				<Ellipse
					x:Name="LoadingAnimation"
					Width="100"
					Height="100"
					Margin="120,60,120,60"
					RenderTransformOrigin="0.5 0.5"
					Stroke="{StaticResource ThemeColor2}"
					StrokeDashArray="47 16"
					StrokeDashCap="Round"
					StrokeThickness="5"
					Visibility="Visible">
					<Ellipse.RenderTransform>
						<RotateTransform x:Name="Rotation" Angle="0" />
					</Ellipse.RenderTransform>
					<Ellipse.Triggers>
						<EventTrigger RoutedEvent="Loaded">
							<BeginStoryboard>
								<Storyboard RepeatBehavior="Forever">
									<DoubleAnimation
										Storyboard.TargetName="Rotation"
										Storyboard.TargetProperty="Angle"
										From="0"
										To="360" />
								</Storyboard>
							</BeginStoryboard>
						</EventTrigger>
					</Ellipse.Triggers>
				</Ellipse>
			</Grid>
			<Grid
				Grid.Row="1"
				Grid.Column="1"
				Margin="5"
				VerticalAlignment="Bottom">
				<Grid.RowDefinitions>
					<RowDefinition Height="auto" />
					<RowDefinition Height="auto" />
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="auto" />
					<ColumnDefinition Width="auto" />
					<ColumnDefinition Width="auto" />
				</Grid.ColumnDefinitions>

				<customControls:clsPortalButton
					Grid.Row="0"
					Grid.Column="0"
					Click="btnOpenTab_Click"
					Content="Smoelenboek"
					MainIcon="{StaticResource Smoelenboek}"
					Tag="Smoelenboek" />

				<customControls:clsPortalButton
					Grid.Row="0"
					Grid.Column="1"
					Click="btnOpenTab_Click"
					Content="Helpdesk TD"
					MainIcon="{StaticResource Engineer}"
					SmallIcon="{StaticResource Vision2}"
					Tag="Helpdesk TD" />

				<customControls:clsPortalButton
					Grid.Row="0"
					Grid.Column="2"
					Click="btnOpenTab_Click"
					Content="Helpdesk ICT"
					MainIcon="{StaticResource Hotline}"
					SmallIcon="{StaticResource Vision2}"
					Tag="Helpdesk ICT" />

				<customControls:clsPortalButton
					Grid.Row="1"
					Grid.Column="0"
					Click="btnOpenTab_Click"
					Content="Bladeren DMS"
					MainIcon="{StaticResource Documents}"
					SmallIcon="{StaticResource Search}"
					Tag="Bladeren DMS" />

				<customControls:clsPortalButton
					Grid.Row="1"
					Grid.Column="2"
					Click="btnOpenTab_Click"
					Content="Helpdesk keuken"
					MainIcon="{StaticResource ForkAndKnife}"
					SmallIcon="{StaticResource Vision2}"
					Tag="Helpdesk keuken" />

				<customControls:clsPortalButton
					x:Name="AdminButton"
					Grid.Row="1"
					Grid.Column="1"
					Click="btnOpenTab_Click"
					MainIcon="{StaticResource AdminButtonImage}"
					Tag="Admin paneel"
					Visibility="{Binding UserRoleId, Converter={StaticResource RoleToVisibilityConverter}}" />

			</Grid>
			<!--  ruimte voor expander  -->
			<Grid
				x:Name="grdExpanders"
				Grid.Row="0"
				Grid.RowSpan="2"
				Grid.Column="2">
				<StackPanel Grid.Column="0">
					<Expander Margin="0,5,0,5">
						<Expander.Header>
							<StackPanel Orientation="Horizontal">
								<TextBlock
									Margin="0,0,5,0"
									HorizontalAlignment="Left"
									Text="Ongelezen mails" />
								<Image Width="10" Source="jpg.png" />
								<Button Width="15" />
							</StackPanel>
						</Expander.Header>
					</Expander>
					<Expander Margin="0,0,0,5">
						<Expander.Header>
							<StackPanel Orientation="Horizontal">
								<TextBlock
									Margin="0,0,5,0"
									HorizontalAlignment="Left"
									Text="De 10-laatste IC's" />
								<Image Width="10" Source="jpg.png" />
							</StackPanel>
						</Expander.Header>
					</Expander>
					<Expander Margin="0,0,0,5">
						<Expander.Header>
							<StackPanel Orientation="Horizontal">
								<TextBlock
									Margin="0,0,5,0"
									HorizontalAlignment="Left"
									Text="Centrale overlegmomenten" />
								<Image Width="10" Source="jpg.png" />
							</StackPanel>
						</Expander.Header>
					</Expander>
					<Expander Margin="0,0,0,5">
						<Expander.Header>
							<StackPanel Orientation="Horizontal">
								<TextBlock
									Margin="0,0,5,0"
									HorizontalAlignment="Left"
									Text="" />
								<Image Width="10" />
							</StackPanel>
						</Expander.Header>
					</Expander>
					<Expander Margin="0,0,0,5">
						<Expander.Header>
							<StackPanel Orientation="Horizontal">
								<TextBlock
									Margin="0,0,5,0"
									HorizontalAlignment="Left"
									Text="Mijn snelkoppelingen" />
								<Image Width="10" Source="jpg.png" />
								<Image Width="10" Source="jpg.png" />
							</StackPanel>
						</Expander.Header>
					</Expander>
					<Expander Margin="0,0,0,5">
						<Expander.Header>
							<StackPanel Orientation="Horizontal">
								<TextBlock
									Margin="0,0,5,0"
									HorizontalAlignment="Left"
									Text="" />
								<Image Width="10" />
							</StackPanel>
						</Expander.Header>
					</Expander>
					<Expander Margin="0,0,0,5">
						<Expander.Header>
							<StackPanel Orientation="Horizontal">
								<TextBlock
									Margin="0,0,5,0"
									HorizontalAlignment="Left"
									Text="Mijn THAK favorieten" />
								<Image Width="10" Source="jpg.png" />
								<Image Width="10" Source="jpg.png" />
							</StackPanel>
						</Expander.Header>
					</Expander>
					<Expander Margin="0,0,0,5">
						<Expander.Header>
							<StackPanel Orientation="Horizontal">
								<TextBlock
									Margin="0,0,5,0"
									HorizontalAlignment="Left"
									Text="" />
								<Image Width="10" />
							</StackPanel>
						</Expander.Header>
					</Expander>
					<Expander Margin="0,0,0,5">
						<Expander.Header>
							<StackPanel Orientation="Horizontal">
								<TextBlock
									Margin="0,0,5,0"
									HorizontalAlignment="Left"
									Text="Mijn internet favorieten" />
								<Image Width="10" />
							</StackPanel>
						</Expander.Header>
						<ListBox>
							<ListBoxItem>Item 1</ListBoxItem>
							<ListBoxItem>Item 1</ListBoxItem>
							<ListBoxItem>Item 1</ListBoxItem>
							<ListBoxItem>Item 1</ListBoxItem>
						</ListBox>
					</Expander>
				</StackPanel>
			</Grid>
			<!--  einde ruimte voor expander  -->
			<!--  knoppen  -->
			<ScrollViewer
				x:Name="scvKnoppen"
				Grid.Row="0"
				Grid.RowSpan="2"
				Grid.Column="0"
				VerticalScrollBarVisibility="auto" />
			<!--  einde knoppen  -->
		</Grid>
	</ScrollViewer>
</UserControl>
