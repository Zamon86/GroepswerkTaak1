<Application
    x:Class="GroepswerkTaak1.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:GroepswerkTaak1"
    StartupUri="MainWindow.xaml">

    <Application.Resources>

        <!--  Kleur van achtergrond  -->
        <SolidColorBrush x:Key="MainBackgroundColor" Color="#FFCDDDDD" />

        <!--  Kleur van tabbladen  -->
        <SolidColorBrush x:Key="TabColor" Color="#FF3BBCBD" />

        <!--  Kleur van active tabblad  -->
        <SolidColorBrush x:Key="ActiveTabColor" Color="#FFD75563" />

        <!--  Kleur van menupictogrammen  -->
        <SolidColorBrush x:Key="IconColor" Color="#FFE84848" />

        <!--  Menu-item stijl  -->
        <Style x:Key="CustomMenuItemStyle" TargetType="MenuItem">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <!--  Sluitknop stijl  -->
        <Style x:Key="CloseTabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource TabColor}" />
            <Setter Property="Margin" Value="10,0,0,0" />
            <Setter Property="Width" Value="14" />
            <Setter Property="Height" Value="14" />
            <Setter Property="FontSize" Value="11" />
            <Setter Property="FontWeight" Value="ExtraBold" />
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform X="0" Y="0" />
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="3"
                        Opacity="0.3"
                        ShadowDepth="0"
                        Color="Black" />
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="Gray"
                            BorderThickness="1"
                            CornerRadius="3">
                            <ContentPresenter
                                Margin="0,-2,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <EventSetter Event="Click" Handler="btnCloseTab_Click" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.05" ScaleY="1.05" />
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect
                                BlurRadius="6"
                                Opacity="0.6"
                                ShadowDepth="3"
                                Color="Black" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>


        <!--  Stijl van tabbladen  -->
        <!--
            Ik heb hier multitriggers gebruikt omdat ik een probleem had met het regelen
            van de zichtbaarheid van de x-knop vanwege de hiërarchie van gewone triggers.
        -->
        <Style x:Key="TabItemStyle" TargetType="TabItem">
            <Setter Property="Background" Value="{StaticResource TabColor}" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Padding" Value="8,0,5,5" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="MinHeight" Value="18" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border
                            Name="Border"
                            Padding="{TemplateBinding Padding}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="2,10,0,0">
                            <StackPanel
                                Margin="3"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <ContentPresenter
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    ContentSource="Header" />
                                <Button
                                    x:Name="btnCloseTab"
                                    Content="X"
                                    Style="{StaticResource CloseTabButtonStyle}"
                                    Visibility="Hidden" />
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True" />
                                    <Condition Property="Border.IsMouseOver" Value="False" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource ActiveTabColor}" />
                                <Setter TargetName="btnCloseTab" Property="Visibility" Value="Visible" />
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="True" />
                                    <Condition Property="Border.IsMouseOver" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource ActiveTabColor}" />
                                <Setter TargetName="btnCloseTab" Property="Visibility" Value="Visible" />
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="False" />
                                    <Condition Property="Border.IsMouseOver" Value="False" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource TabColor}" />
                                <Setter TargetName="btnCloseTab" Property="Visibility" Value="Hidden" />
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsSelected" Value="False" />
                                    <Condition Property="Border.IsMouseOver" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource TabColor}" />
                                <Setter TargetName="btnCloseTab" Property="Visibility" Value="Visible" />
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



